.wrapper__chat-main__message-list__message-box{data: {message: {id: message.id}}}
  .upper-message
    %p.upper-message__user-name
      = message.user.name
    %p.upper-message__created-date
      =message.created_at.strftime("%Y年%m月%d日 %H時%M分")     
  .lower-message
    -if message.content
      %p.lower-message__message-text
        = message.content
      = image_tag message.image.url, class: "wrapper__chat-main__message-list__message-box__message-img" if message.image.present?